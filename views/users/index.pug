extends ../application.pug

block content

	.page-header
		.jumbotron
			.container.text-xs-center

				h1 Welcome to MovieMatch!
				h5 for everyone who loves to go to the movies, but hates to go alone.

		.container
			.row
				each movie in movies
					.col-md-3
						.card.card-block
							.caption.text-xs-center
								h5= movie.title
							.thumbnail
								a(href="/movies/" + movie.slug)
									img(src=movie.coverImageURL width="200" height="300" class="mx-auto d-block")
							hr
							div(class="form-group")
								a(href="/movies/" + movie.slug role="button" class="d-block btn btn-primary") Check out!
